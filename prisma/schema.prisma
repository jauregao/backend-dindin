generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  name        String
  email       String        @unique
  password    String
  Transaction Transaction[]

  @@map("users")
}

model Category {
  id          String        @id @default(uuid())
  description String        @unique
  Transaction Transaction[]

  @@unique([id, description])
  @@map("categories")
}

model Transaction {
  id                   String   @id @default(uuid())
  type                 EType
  description          String
  value                Int
  data                 DateTime
  user                 User     @relation(fields: [user_id], references: [id])
  user_id              String
  category             Category @relation(fields: [category_id, category_description], references: [id, description])
  category_id          String
  category_description String
}

enum EType {
  INCOME
  EXPENSE
}
